extends layout

block content
  h1 Login
  if error
    p.error= error
  form(method="POST", action="/login")
    label(for="username") Nazwa użytkownika:
    input(type="text" name="username" required)
    br
    label(for="password") Hasło:
    input(type="password" name="password" required)
    br
    button(type="submit") Zaloguj się
